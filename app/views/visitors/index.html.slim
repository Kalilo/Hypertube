- provide(:title, 'Home')

h1
  | Stream and Download Movies

row.gap3
  ul.index-grid
    - @random_movies.each do |movie|
      li
        = link_to src = movie_path(id: movie[:id], source: movie[:source])
          img.thumbnail.homepage src="#{movie[:image_url]}"
        p = movie[:title]

